<h4>Special Events</h4>
<br>
<br>
<% @events.each_with_index do |event, index| %>

  <div class="container">
    <div class="span12">
      <div class="row">
        <b><%= event.name %></b>
        <br>
        <br>
        <%= event.start_at %>
        <br>
        <br>
        <%= event.address %>
        <br>
        <br>
        <!--<%= event.end_at %>-->
        <%= event.description %>
        <br>
        <br>
        <%= event.created_at.strftime("%e, %b, %Y") %> <a href="#myModal-<%= index %>" role="button" class="btn" data-toggle="modal" data-target="#modal-body-<%= index %>"><span class="icon-map-marker"></i> Map</a>
        <%= link_to "Show", event %>
      <hr>
      </div>
    </div>
  </div>
<div id="myModal-<%= index %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 id="myModalLabel"><%= event.name %></h3>
  </div>
  <div class="modal-body">
    <div class="modal-body-content" id="modal-body-<%= index %>"></div>
    <div class="ajax-loader"></div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" class="btn" aria-hidden="true">Close</button>
  </div>
</div>
<% end %>

<%= link_to 'Create an Event', new_event_path, :class => "btn btn-success", :style => "color:white;" %>


