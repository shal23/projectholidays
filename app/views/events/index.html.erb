<% @events.each_with_index do |event, index| %>
  <tr>
  <div class="container">
    <div class="span12">
      <div class="row">
        <b><%= event.name %></b>
        <br>
        <br>
        <%= event.start_at %>
        <br>
        <br>
        <%= event.address %>
        <br>
        <br>
        <!--<%= event.end_at %>-->
        <%= event.description %>
        <br>
        <br>
        <%= event.created_at.strftime("%e, %b, %Y") %> 
        <br>
        <br>
     <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=156481254525303";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>

      <div class="fb-like" data-send="true" data-width="450" data-show-faces="true" data-font="arial"></div>
      <br>
      </div>
    </div>
  </div>
  <br>

<br>
<br>

<% if user_signed_in? %>
      <% if current_user.has_role? :agent %>
        <%= link_to 'Edit an Event', edit_event_path(event), :class => "btn btn-success", :style => "color:white;" %>
        <%= link_to 'Create an Event', new_event_path, :class => "btn btn-success", :style => "color:white;" %>

       <% end %>
  <% end %>

  <% end %>