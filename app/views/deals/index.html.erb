<h3>Deals</h3>

    <center><%= image_tag "taj_mahal.jpg", :class => "img-polaroid" %></center>
      <table class="table table-striped">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Url</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        <% @deals.each do |deal| %>
        <tr>
            <td><%= deal.title %></td>
            <td><%= deal.description %></td>
            <td><%= deal.url %></td>
            <br>
            <br>
            <!--<td><%= link_to 'Show', deal %></td>-->
          <% if user_signed_in? %>
            <% if current_user.has_role? :admin %>
              <td><%= link_to 'Destroy',deal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <br>
            <hr>
            <br>
        </tr>
      </table>
        <% end %>
      <% end %>

