<%= simple_form_for(@[@post, @post.comments.build]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :content %>
    <%= f.association :post %>
  </div>

  <div class="form-actions">
    <%= f.submit, :class => "btn btn-success" %>
  </div>
<% end %>
